#!/bin/sh
cp ../usermanual/usermanual.pdf SpikeDB_Manual.pdf
echo "Preparing tar file..."
rm -f SpikeDB.app.tar.gz
tar czf SpikeDB.app.tar.gz SpikeDB.app
ftp -u ftp://faure@psyftp.mcmaster.ca/spikedb/ SpikeDB.app.tar.gz index.html SpikeDB.png SpikeDB_Manual.pdf
echo "Download at http://psych.mcmaster.ca/faurelab/spikedb/"
